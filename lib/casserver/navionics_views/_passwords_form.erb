<%# coding: UTF-8 -%>
<form method="post" action="<%= @form_action || "passwords" %>" id="reset-pwd-form">
  <div class="jnc-cas-title"><%= t.label.new_password %></div>
  <div class="jnc-cas-field">
    <div class="jnc-cas-field-title"><%= t.placeholder.new_password %></div>
    <input id="password" name="password" type="password" class="jnc-form-control jnc-cas-field-input" value="<%=escape_html @password %>">
    <div class="reg-hide-pass">
      <label><input type="checkbox" onclick="showPassword();"/> <%= t.label.show_password %></label>
    </div>
  </div>
  <input type="hidden" id="lt" name="lt" value="<%= escape_html @lt %>"/>
  <input type="hidden" id="service" name="service" value="<%= escape_html @service %>"/>

  <div class="jnc-cas-footer">
    <div class="jnc-grid jnc-grid-row">
      <div class="jnc-grid-col jnc-grid-col-12">
        <a href="#"  onclick="document.forms[0].submit();return false;" class="jnc-simple-btn jnc-simple-btn-light-blue jnc-cas-btn"><%= t.button.reset_password%></a>
      </div>
    </div>
  </div>
</form>
